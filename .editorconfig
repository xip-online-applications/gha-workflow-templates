; This file is for unifying the coding style for different editors and IDEs
; See editorconfig.org

; top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; make YAML explicit so it's never overwritten by [*]

[{*.yml,*.yaml}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
